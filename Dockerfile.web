# Stage 1: Build
FROM node:20-slim AS build

WORKDIR /app

COPY skill-0-dashboard/apps/web/package.json skill-0-dashboard/apps/web/package-lock.json* ./
RUN npm ci --ignore-scripts

COPY skill-0-dashboard/apps/web/ .
RUN npm run build

# Stage 2: Serve
FROM nginx:alpine

# SPA routing config
RUN printf 'server {\n\
    listen 80;\n\
    server_name _;\n\
    root /usr/share/nginx/html;\n\
    index index.html;\n\
\n\
    # SPA fallback\n\
    location / {\n\
        try_files $uri $uri/ /index.html;\n\
    }\n\
\n\
    # API proxy (core)\n\
    location /api/ {\n\
        proxy_pass http://api:8000;\n\
        proxy_set_header Host $host;\n\
        proxy_set_header X-Real-IP $remote_addr;\n\
    }\n\
\n\
    # Dashboard API proxy\n\
    location /dashboard-api/ {\n\
        rewrite ^/dashboard-api/(.*) /$1 break;\n\
        proxy_pass http://dashboard:8001;\n\
        proxy_set_header Host $host;\n\
        proxy_set_header X-Real-IP $remote_addr;\n\
    }\n\
\n\
    # Cache static assets\n\
    location ~* \\.(?:css|js|woff2?|svg|png|jpg|jpeg|gif|ico)$ {\n\
        expires 1y;\n\
        add_header Cache-Control "public, immutable";\n\
    }\n\
}\n' > /etc/nginx/conf.d/default.conf

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
    CMD wget -q --spider http://localhost/ || exit 1
