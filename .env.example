# Skill-0 Environment Configuration
# Copy to .env and customize values

# === Core API ===
SKILL0_DB_PATH=skills.db
SKILL0_PARSED_DIR=parsed

# === Governance ===
SKILL0_GOVERNANCE_DB_PATH=governance/db/governance.db
SKILL0_TOOLS_PATH=tools

# === GPU / Device ===
# Options: auto, cpu, cuda
SKILL0_DEVICE=auto

# === CORS ===
# Comma-separated allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# === Authentication (JWT) ===
# IMPORTANT: Change JWT_SECRET_KEY in production!
JWT_SECRET_KEY=dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# === Rate Limiting ===
# Format: {count}/{period} â€” e.g. 100/minute, 1000/hour
API_RATE_LIMIT=100/minute

# === Logging ===
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
