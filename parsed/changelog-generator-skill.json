        "deterministic": true,
        "side_effects": []
      },
      {
        "id": "a_002",
        "name": "Categorize Changes",
        "action_type": "transform",
        "description": "Group commits into logical categories (features, improvements, bug fixes, breaking changes, security)",
        "immutable_elements": [
          "category definitions",
          "classification rules"
        ],
        "mutable_elements": [
          "commit messages",
          "category assignment"
        ],
        "deterministic": false,
        "side_effects": []
      },
      {
        "id": "a_003",
        "name": "Translate Technical to User-Friendly",
        "action_type": "llm_inference",
        "description": "Convert developer commit messages into customer language",
        "immutable_elements": [
          "translation prompt structure"
        ],
        "mutable_elements": [
          "input commit messages",
          "output language style",
          "brand voice"
        ],
        "deterministic": false,
        "side_effects": []
      },
      {
        "id": "a_004",
        "name": "Format Changelog",
        "action_type": "transform",
        "description": "Create clean, structured changelog entries with proper formatting",
        "immutable_elements": [
          "markdown structure",
          "section headers"
        ],
        "mutable_elements": [
          "date format",
          "category ordering",
          "emoji usage"
        ],
        "deterministic": true,
        "side_effects": []
      },
      {
        "id": "a_005",
        "name": "Filter Internal Commits",
        "action_type": "transform",
        "description": "Exclude internal commits (refactoring, tests, etc.) from user-facing changelog",
        "immutable_elements": [
          "filter patterns",
          "exclusion keywords"
        ],
        "mutable_elements": [
          "commit list",
          "exclusion rules"
        ],
        "deterministic": true,
        "side_effects": []
      },
      {
        "id": "a_006",
        "name": "Write Changelog File",
        "action_type": "io_write",
        "description": "Save the generated changelog to CHANGELOG.md or specified output",
        "immutable_elements": [
          "file write operation"
        ],
        "mutable_elements": [
          "output path",
          "file format"
        ],
        "deterministic": true,
        "side_effects": [
          "creates or modifies file on disk"
        ]
      }
    ],
    "rules": [
      {
        "id": "r_001",
        "name": "Validate Git Repository",
